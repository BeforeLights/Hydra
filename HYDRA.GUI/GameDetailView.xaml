<UserControl x:Class="HYDRA.GUI.GameDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HYDRA.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="{StaticResource PrimaryDark}">
    
    <ScrollViewer Margin="30" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column: Cover Art and Actions -->
            <Border Grid.Column="0" 
                    Style="{StaticResource Card}"
                    Margin="0,0,20,0"
                    VerticalAlignment="Top">
                <StackPanel>
                    <!-- Cover Art -->
                    <Border CornerRadius="8" 
                            ClipToBounds="True"
                            Margin="0,0,0,20">
                        <Grid>
                            <Image x:Name="CoverArtImage" 
                                   Height="480" 
                                   Stretch="UniformToFill"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                            <!-- Fallback for missing cover art -->
                            <Border Background="#404040"
                                    Height="480"
                                    Visibility="{Binding CoverArtPath, Converter={x:Static local:NullToVisibilityConverter.Instance}}">
                                <StackPanel HorizontalAlignment="Center" 
                                           VerticalAlignment="Center">
                                    <TextBlock Text="🎮" 
                                               FontSize="72" 
                                               HorizontalAlignment="Center" 
                                               Foreground="{StaticResource TextMuted}"
                                               Margin="0,0,0,10"/>
                                    <TextBlock Text="No Image Available" 
                                               Foreground="{StaticResource TextMuted}"
                                               HorizontalAlignment="Center"
                                               FontSize="16"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Price Section -->
                    <Border Background="{StaticResource AccentBlue}"
                            CornerRadius="8"
                            Padding="20,15"
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Price" 
                                       Foreground="White" 
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1"
                                       x:Name="PriceTextBlock" 
                                       Text="$59.99" 
                                       Foreground="White" 
                                       FontSize="28" 
                                       FontWeight="Bold"/>
                        </Grid>
                    </Border>

                    <!-- Action Button -->
                    <Button x:Name="AddToCartButton" 
                            Content="🛒 Add to Cart" 
                            Style="{StaticResource ModernButton}"
                            FontSize="18" 
                            Padding="20,15"
                            Click="AddToCartButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Right Column: Game Details -->
            <StackPanel Grid.Column="1">
                <!-- Game Title -->
                <TextBlock x:Name="TitleTextBlock" 
                           Text="Game Title" 
                           Style="{StaticResource TitleText}"
                           HorizontalAlignment="Left"
                           FontSize="36" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>

                <!-- Game Description -->
                <Border Style="{StaticResource Card}" 
                        Margin="0,0,0,30"
                        Padding="25">
                    <StackPanel>
                        <TextBlock Text="📖 Description" 
                                   Style="{StaticResource SubtitleText}"
                                   Margin="0,0,0,15"/>
                        <TextBlock x:Name="DescriptionTextBlock" 
                                   Text="Game description goes here..." 
                                   Foreground="{StaticResource TextSecondary}" 
                                   FontSize="16" 
                                   TextWrapping="Wrap" 
                                   LineHeight="24"/>
                    </StackPanel>
                </Border>

                <!-- Game Information -->
                <Border Style="{StaticResource Card}"
                        Margin="0,0,0,30"
                        Padding="25">
                    <StackPanel>
                        <TextBlock Text="📋 Game Information" 
                                   Style="{StaticResource SubtitleText}"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Release Date -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Release Date: " 
                                       Foreground="{StaticResource TextSecondary}" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Margin="0,0,10,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       x:Name="ReleaseDateTextBlock" 
                                       Text="N/A" 
                                       Foreground="{StaticResource TextPrimary}"
                                       FontSize="14"
                                       Margin="0,0,0,10"/>

                            <!-- Publisher -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Publisher: " 
                                       Foreground="{StaticResource TextSecondary}" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Margin="0,0,10,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       x:Name="PublisherTextBlock" 
                                       Text="N/A" 
                                       Foreground="{StaticResource TextPrimary}"
                                       FontSize="14"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Screenshots Section -->
                <Border Style="{StaticResource Card}"
                        Padding="25">
                    <StackPanel>
                        <TextBlock Text="📸 Screenshots" 
                                   Style="{StaticResource SubtitleText}"
                                   Margin="0,0,0,20"/>
                        
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                      VerticalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="ScreenshotsItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,15,0" 
                                                CornerRadius="8" 
                                                ClipToBounds="True">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" 
                                                                Direction="270" 
                                                                ShadowDepth="2" 
                                                                BlurRadius="4" 
                                                                Opacity="0.3"/>
                                            </Border.Effect>
                                            <Image Source="{Binding ImagePath}" 
                                                   Height="150" 
                                                   Stretch="UniformToFill"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <!-- No Screenshots Message -->
                        <TextBlock Text="No screenshots available" 
                                   Foreground="{StaticResource TextMuted}"
                                   HorizontalAlignment="Center"
                                   FontStyle="Italic"
                                   Visibility="{Binding Items.Count, ElementName=ScreenshotsItemsControl, Converter={x:Static local:CountToVisibilityConverter.Instance}}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
